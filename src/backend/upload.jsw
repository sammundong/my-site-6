// backend/upload.jsw
import { mediaManager } from 'wix-media-backend';

export function uploadImage(file) {
    const fileName = file.name; // 파일 이름
    const mimeType = "image/png"; // MIME 타입

    return mediaManager.upload(file, { fileName, mimeType })
        .then((mediaItem) => {
            return mediaItem.fileUrl; // 업로드된 이미지 URL 반환
        })
        .catch((error) => {
            console.error("파일 업로드 중 오류 발생:", error);
            throw new Error("파일 업로드 실패");
        });
}

